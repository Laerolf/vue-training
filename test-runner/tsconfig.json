{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,

    /* Bundler mode */
    "moduleResolution": "node",
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "allowSyntheticDefaultImports": true,

    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@application/*": [
        "src/application/*"
      ],
      "@features/*": [
        "src/features/*"
      ],
      "@lib/*": [
        "lib/*"
      ],
    }
  },
  "include": [
    "src/**/*",
    "lib/tests/**/*",
  ],
  "exclude": [
    "dist"
  ]
}