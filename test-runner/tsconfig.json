{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,

        "moduleResolution": "node",
        "moduleDetection": "force",
        "allowSyntheticDefaultImports": true,

        "outDir": "./dist",
        "baseUrl": ".",
        "paths": {
            "@application/*": ["src/application/*"],
            "@features/*": ["src/features/*"],
            "@lib/*": ["lib/*"],
            "@unit-tests/*": ["test/*"]
        }
    },
    "include": ["src/**/*", "lib/tests/**/*", "test/**/*"],
    "exclude": ["dist"]
}
